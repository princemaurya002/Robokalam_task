<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme using Material Components (M2) -->
    <style name="Theme.Robokalam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Required for TextInputLayout and other Material Components -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:statusBarColor">#008BD6</item>


        <!-- Optional: explicitly set style for TextInputLayout -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>
</resources>
